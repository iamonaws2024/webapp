pipeline {
    agent none
    stages {
        stage('OpenJDK 7') {
            agent {
                docker { image 'openjdk:7-jdk' }
            }
            steps {
                sh 'java -version'
            }
        }
        stage('Java 8') {
            agent {
                docker { image 'openjdk:8-jdk' }
            }
            steps {
                sh 'java -version'
            }
        }
    }
}
